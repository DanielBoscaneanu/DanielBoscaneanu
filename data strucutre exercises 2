// Tema 4.1. Pentru o matrice pătratică de ordin n ( 1 ≤ n ≤ 100) să se afişeze elementele
aflate pe diagonală principală.
#include <stdio.h>
int main() {
 int i,j,lin,col,m[100][100];
 printf("Introdu nr de linii: ");
 scanf("%i", &lin);
 printf("Introdu nr de coloane: ");
 scanf("%i", &col);
 for(i = 0; i < lin; i++) {
 for(j = 0; j < col; j++) {
 printf("m[%i][%i] = ",i,j);
 scanf("%d", &m[i][j]);
 }
 }

 for(i = 0; i < lin; i++) {
 for(j = 0; j < col; j++) {
 if(i == j) {
 printf("%i ", m[i][j]);
 }
 }
 }

 return 0;
}
// Tema 4.2. Pentru o matrice pătratică de ordin n ( 1 ≤ n ≤ 100) calculaţi suma
//elementelor de pe diagonala secundară.
#include <stdio.h>
int main() {
 int i, j, n, s = 0;
 printf("Introdu nr de linii si coloane: ");
 scanf("%i", &n);
 int m[n][n];

 for(i = 0; i < n; i++) {
 for(j = 0; j < n; j++) {
 printf("m[%i][%i] = ",i,j);
 scanf("%d", &m[i][j]);
 }

 }

 s = 0;
 for(i = 0; i <= n ; i++) {
 for(j = 0; j <= n ; j++) {
 if(i + j == n - 1) {
 s = s + m[i][j];
 }
 }
 }
 printf("Suma elementelor de pe diagonala secudanra este: %d\n", s);
 return 0;
}
//Tema 4.3. Pentru o matrice pătratică de ordin n ( 1 ≤ n ≤ 100) număraţi
//elementele nule de sub diagonala secundară.
#include <stdio.h>
int main() {
 int i, j, n, cn;
 printf("Introdu nr de linii si coloane: ");
 scanf("%i", &n);
 int m[n][n];

 for(i = 0; i < n; i++) {
 for(j = 0; j < n; j++) {
 printf("m[%i][%i] = ",i,j);
 scanf("%d", &m[i][j]);
 }

 }
 cn = 0;
 for(i = n; i >= 0 ; i--) {
 for(j = 0; j <= n ; j++) {
 if(cn < j) {
 cn++;
 }
 }
 }
 printf("Nr. elementelor nule de pe diagonala secundara este: %d\n", cn);
 return 0;
}
//Tema 4.4. Pentru o matrice pătratică de ordin n ( 1 ≤ n ≤ 100) calculaţi media
//aritmetică a elementelor de deasupra diagonalei principale.
#include <stdio.h>
int main() {
 int i, j, n;
 printf("Introdu nr de linii si coloane: ");
 scanf("%i", &n);
 int m[n][n];

 for(i = 0; i < n; i++) {
 for(j = 0; j < n; j++) {
 printf("m[%i][%i] = ",i,j);
 scanf("%d", &m[i][j]);
 }

 }
 int cn = 0;
 float s = 0;
 for(i = 0; i < n; i++) {
 for(j = 0; j < n ; j++) {
 if(j > i) {
 s = s + m[i][j];
 cn++;
 }
 }
 }

 float aritm = 0;
 aritm = s / cn;
 printf("Media aritmetica a elementelor deasupra diagonalei secundare este:
%f\n", aritm);
 return 0;
}
//Tema 4.5. Ducând cele două diagonale într-o matrice pătratică se obţin patru
//zone triunghiulare. Afişaţi suma componentelor din interiorul fiecărei zone.
#include <stdio.h>
int main() {
 int i, j, n, stsus=0, drjos=0, stjos=0, drsus = 0;
 printf("Introdu nr de linii si coloane: ");
 scanf("%i", &n);
 int m[n][n];

 for(i = 0; i < n; i++) {
 for(j = 0; j < n; j++) {
 printf("m[%i][%i] = ",i,j);
 scanf("%d", &m[i][j]);
 }

 }
 for(i = 0; i < n; i++) {
 for(j = 0; j < n ; j++) {
 if(i > j && j + i > n - 1) { stjos = stjos + m[i][j]; }
 if(i < j && j + i < n - 1) { drsus = drsus + m[i][j]; }
 if(i < j && j + i < n - 1) { stsus = stsus + m[i][j]; }
 if(i > j && j + i > n - 1) { drjos = drjos + m[i][j]; }


 }
 }
 printf("Suma componentelor din zonele triunghiulare sunt: 1)%i\n2)%i\n3)%i\n4)%i\n ",
stsus,drjos,stjos,drsus);
}
