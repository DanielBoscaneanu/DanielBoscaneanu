       System.out.println(aritm);
       }
} 

//numere intregi java
public class NumereIntregi {
   public static void main(String[] args) {    
   int numarBaza10=267;    //267
   int valoareOpt=0413;    //267
   int valoare16=0x10B;    //267
   int valoareBinara=0b100001011; 
   System.out.println(numarBaza10 + valoareOpt ); 
   System.out.println(valoare16 + valoareBinara );   
   } 
} 

//greutate 
public class Greutate { 
 public static void main(String[] args) {
 float greutate = 79.9f;
 boolean esteInregistrata = false;
 float nouaGreutate=78.8f;
 if(greutate>nouaGreutate) esteInregistrata = true;
 else if(greutate<nouaGreutate) esteInregistrata = false;
 System.out.println("Greutatea este inregistrata? : " + esteInregistrata);
 }
}


//ex cu pesti in java
public class Pesti { 
 public static void main(String[] args) {
 int temperaturaApei = 27;
 boolean suntPestiMulti = true;
 if(temperaturaApei >= 30) suntPestiMulti = false;
 else if(temperaturaApei < 30 && temperaturaApei >18) suntPestiMulti = true;
 else if(temperaturaApei <=18) suntPestiMulti = false;
 
 if ( suntPestiMulti ) System.out.println("Pesti sunt multi");
 else System.out.println("Pesti sunt putini");
 }
}

