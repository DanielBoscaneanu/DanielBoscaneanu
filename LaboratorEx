//erori in java
public class Erori {
  public static void main (String[] args){
    int a;
    a=5;    
    int b; 
    b=3;   
    int c;    
    c=a/b;   
    System.out.println(c);  
    } 
  } 
  
  //medie java
  public class Medie {
   public static void main(String[] args) {
       double a, b, c;    
       a=2.2;    
       b=3.3;    
       c=10;    
