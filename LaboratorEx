/* Să se scrie un program Java care traduce numerele de la 1 la 12 în numele lunilor corespunzătoare: Ianuarie, Februarie, ..., Decembrie. */

import java.util.Scanner;

public class Months {
	public static void main(String[] args) {
		System.out.println("Introdu o cifra de la 1 la 12 : ");	
		Scanner scan = new Scanner(System.in);
		int numar = scan.nextInt();
		if(numar>=1 && numar <=12) {
			switch(numar) {
			case 1 -> System.out.println("Ianuarie");
			case 2 -> System.out.println("Februarie");
			case 3 -> System.out.println("Martie");
			case 4 -> System.out.println("Aprilie");
			case 5 -> System.out.println("Mai");
			case 6 -> System.out.println("Iunie");
			case 7 -> System.out.println("Iulie");
			case 8 -> System.out.println("August");
			case 9 -> System.out.println("Septembrie");
			case 10 -> System.out.println("Octombrie");
			case 11 -> System.out.println("Noiembrie");
			case 12 -> System.out.println("Decembrie");
			}
		}
		else System.out.println("Ati introdus un numar gresit.");


	}
}

// cerc in java
public class Cerc {
	private double raza;
	public Cerc(double r) {
	raza=r;
	}
	public double getArie() {
	return Math.PI*raza*raza;//Math.PI*pow(raza,2);
	}
	public double getCircumferinta(){
	return 2*Math.PI*raza;
	}
	public static void main(String[] args) {
	Cerc cerc1 = new Cerc(5); // raza = 5;
	System.out.println("Aria cercului este: "+ cerc1.getArie());
	System.out.println("Circumferinta cercului este: "+ cerc1.getCircumferinta());

	Cerc cerc2 = new Cerc(10);
	System.out.println(cerc2.getArie());
	System.out.println(cerc2.getCircumferinta());

	 cerc1 = new Cerc(7); // raza = 5;
	System.out.println("Aria cercului este: "+ cerc1.getArie());
	System.out.println("Circumferinta cercului este: "+ cerc1.getCircumferinta());
	//System.gc(); -- STERGE gunoiul din sistema

	}
	}
